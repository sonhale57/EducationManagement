@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header text-center">
        <h4 class="text-success fw-bolder">Thanh toán @ViewBag.mota</h4> 
    </div>
    <div class="card-body">
        <div class="h-25">
            @using (Html.BeginForm("CreatePayment", "Payment", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="amount">Số tiền:</label>
                    <input type="number" name="amount" class="form-control" value="@ViewBag.tongtien" required />
                </div>
                <div class="form-group mt-2">
                    <label for="orderId">Mã đơn hàng:</label>
                    <input type="text" name="orderId" class="form-control" value="@ViewBag.orderId" required />
                </div>
                <div class="form-group mt-2">
                    <label for="orderInfo">Thông tin đơn hàng:</label>
                    <input type="text" name="orderInfo" class="form-control" value="@ViewBag.mota" required />
                </div>
                <button type="submit" class="btn btn-primary mt-3">Thanh toán</button>
            }
        </div>
    </div>
</div>
