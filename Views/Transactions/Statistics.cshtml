@{
    ViewBag.Controller = "Kế toán";
    ViewBag.Title = "Thống kê thu chi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/echarts/5.5.0/echarts.min.js"></script>
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card border-start border-4 border-success">
                            <div class="card-body">
                                <div class="overline text-muted mb-1"><i class="ti ti-coin text-success"></i> Phiếu thu</div>
                                <div class="d-flex align-items-center justify-content-between">
                                    <div class=" me-3"><span id="sohocvien" class="fw-bold"></span></div>
                                    <div class="d-flex align-items-center text-success">
                                        <i class="ti ti-trending-up icon-sm me-2"></i>
                                        <div class=" text-success fw-normal"><span id="sohocvienper"></span> %</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="card border-start border-4 border-danger">
                            <div class="card-body">
                                <div class="overline text-muted mb-1"><i class="ti ti-moneybag text-danger"></i> Phiếu chi</div>
                                <div class="d-flex align-items-center justify-content-between">
                                    <div class=" me-3"><span id="sohocvien" class="fw-bold"></span></div>
                                    <div class="d-flex align-items-center text-success">
                                        <i class="ti ti-trending-up icon-sm me-2"></i>
                                        <div class=" text-success fw-normal"><span id="sohocvienper"></span> %</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="doughnut-chart" style="min-height:320px" class="echart-doughnut-rounded-chart-example"></div>
            </div>
        </div>
    </div>
    <div class="col-md-4"></div>
</div>

<script>
    var doughnutChart = echarts.init(document.getElementById('doughnut-chart'));
    var doughnutOption = {
        title: {
            text: '',
            left: 'center'
        },
        tooltip: {
            trigger: 'item',
            formatter: '{a} <br/>{b}: {c} ({d}%)',  // Tooltip format: series name, label name, value, percentage
            backgroundColor: 'rgba(239, 242, 246, 0.9)',  // Tooltip background color
            borderColor: '#cbd0dd',
            borderWidth: 1,
            borderRadius: 4,
            padding: [7, 10],
            textStyle: {
                color: '#141824',  // Tooltip text color
                fontFamily: 'Microsoft YaHei',
                fontSize: 14
            }
        },
        legend: {
            orient: 'horizontal',
            top: 'bottom',
            data: ['Business', 'Technology', 'Health', 'Education', 'Finance']
        },
        series: [
            {
                name: 'Category',
                type: 'pie',
                radius: ['40%', '70%'],  // Doughnut effect
                avoidLabelOverlap: false,
                label: {
                    show: false,
                    position: 'center'
                },
                emphasis: {
                    label: {
                        show: true,
                        fontSize: '18',
                        fontWeight: 'bold'
                    }
                },
                labelLine: {
                    show: false
                },
                itemStyle: {
                    borderRadius: 10,  // Rounded edges
                    borderColor: '#fff',
                    borderWidth: 2
                },
                data: [
                    { value: 600, name: 'Business', itemStyle: { color: '#25b003' } },
                    { value: 450, name: 'Technology', itemStyle: { color: '#ff9f43' } },
                    { value: 300, name: 'Health', itemStyle: { color: '#00c9ff' } },
                    { value: 200, name: 'Education', itemStyle: { color: '#ff4655' } },
                    { value: 150, name: 'Finance', itemStyle: { color: '#ffdd57' } }
                ]
            }
        ]
    };

    doughnutChart.setOption(doughnutOption);
</script>
