@model PagedList.IPagedList<SuperbrainManagement.Models.Branch>
@using PagedList.Mvc;
@{
    ViewBag.Controller = "Cơ sở";
    ViewBag.Title = "Hệ thống cơ sở";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int stt = 1;
}
<div class="row">
    <div class="col col-md-3 col-sm-12">
        <form action="/Branches" method="get">
            <div class="input-group mb-3">
                <input type="text" class="form-control rounded-1" id="searchString" name="searchString" placeholder="Tìm kiếm" value="@ViewBag.CurrentFilter ">
                <button class="input-group-text bg-success ms-1 rounded-1" id="basic-addon2" type="submit"><i class="ti ti-search text-white"></i></button>
            </div>
        </form>
    </div>
    <div class="col col-md-9 col-sm-12 text-right" style="text-align:right;">
        <div class="me-0 btn btn-md p-0">
            <button class="btn btn-md btn-outline-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="ti ti-arrows-sort"></i> Sắp xếp theo
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <li><a class="dropdown-item" href="javascript:Loadlist('name')"><i class="ti ti-sort-a-z"></i> Tên A-Z</a></li>
                <li><a class="dropdown-item" href="javascript:Loadlist('name_desc')"><i class="ti ti-sort-z-a"></i> Tên Z-A</a></li>
                <li><a class="dropdown-item" href="javascript:Loadlist('date')"><i class="ti ti-sort-ascending"></i> Cũ nhất</a></li>
                <li><a class="dropdown-item" href="javascript:Loadlist('date_desc')"><i class="ti ti-sort-descending"></i> Mới nhất</a></li>
            </ul>
        </div>
        <a href="/branches/create" class="btn btn-md btn-success ms-0"><i class="ti ti-plus"></i> Thêm mới</a>
    </div>
</div>
<table class="table fs-3">
    <thead class="bg-success text-white rounded-1">
        <tr>
            <th class="text-center">STT</th>
            <th class="text-center">Mã</th>
            <th>Tên cơ sở</th>
            <th class="text-center">Số điện thoại</th>
            <th class="text-center">Địa chỉ Email</th>
            <th class="text-center">Hạn hợp đồng</th>
            <th class="text-center">Tình trạng</th>
            <th class="text-end">Thao tác</th>
        </tr>
    </thead>
    <tbody id="showlist"></tbody>
    <tr class="loader"></tr>
</table>
<script>
    Loadlist();
    function Loadlist(sort) {
        $(".loader").html("<td colspan=8 class='text-center'>Đang tải dữ liệu, vui lòng đợi <img src='/assets/images/loading.gif' height='50' alt='loading...'></td>");
        $.ajax({
            url: '@Url.Action("Loadlist", "Branches")',
            type: "GET",
            data: {
                searchString: $("#searchString").val(),
                sort :sort
            },
            success: function (data) {
                console.log(data);
                $('#showlist').html(data.str);
                $(".loader").html("");
            },
            error: function (xhr, error) {
                console.log(error);
            }
        });
    }
</script>