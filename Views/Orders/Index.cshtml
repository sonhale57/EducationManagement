@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col col-md-6 col-sm-12">
        <div class="input-group mb-3">
            @if (SuperbrainManagement.Controllers.CheckUsers.CheckHQ())
            {
                @Html.DropDownList("IdBranch", null, htmlAttributes: new { @class = "form-control select2", @onchange = "Loadlist()" })
            }
            <input type="text" class="form-control" name="searchString" placeholder="Tìm kiếm" value="@ViewBag.CurrentFilter">
            <a class="input-group-text bg-success" id="basic-addon2" href="javascript:Loadlist()"><i class="ti ti-search text-white"></i></a>
        </div>
    </div>
    <div class="col col-md-6 col-sm-12 text-right" style="text-align:right;">
        <div class="me-0 btn btn-md p-0">
            <button class="btn btn-md btn-outline-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="ti ti-arrows-sort"></i> Sắp xếp theo
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <li><a class="dropdown-item" href="javascript:Loadlist('name')"><i class="ti ti-sort-a-z"></i> Tên A-Z</a></li>
                <li><a class="dropdown-item" href="javascript:Loadlist('name_desc')"><i class="ti ti-sort-z-a"></i> Tên Z-A</a></li>
                <li><a class="dropdown-item" href="javascript:Loadlist('date')"><i class="ti ti-sort-ascending"></i> Cũ nhất</a></li>
                <li><a class="dropdown-item" href="javascript:Loadlist('date_desc')"><i class="ti ti-sort-descending"></i> Mới nhất</a></li>
            </ul>
        </div>
        <a href="javascript:Loadlist_orders()" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal">
            <i class="ti ti-plus"></i> Đặt hàng
        </a>
    </div>
</div>
<div class="mt-3">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="moi-tab" data-bs-toggle="tab" data-bs-target="#moi" type="button" role="tab" aria-controls="moi" aria-selected="true">Đơn hàng mới</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="thanhtoan-tab" data-bs-toggle="tab" data-bs-target="#thanhtoan" type="button" role="tab" aria-controls="thanhtoan" aria-selected="true">Đã thanh toán</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="xacnhan-tab" data-bs-toggle="tab" data-bs-target="#xacnhan" type="button" role="tab" aria-controls="xacnhan" aria-selected="false">Đã xác nhận </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="donggoi-tab" data-bs-toggle="tab" data-bs-target="#donggoi" type="button" role="tab" aria-controls="donggoi" aria-selected="false">Đã đóng gói</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="danggiao-tab" data-bs-toggle="tab" data-bs-target="#danggiao" type="button" role="tab" aria-controls="danggiao" aria-selected="false">Đang giao hàng</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="hoanthanh-tab" data-bs-toggle="tab" data-bs-target="#hoanthanh" type="button" role="tab" aria-controls="hoanthanh" aria-selected="false">Đã hoàn thành</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="donhuy-tab" data-bs-toggle="tab" data-bs-target="#donhuy" type="button" role="tab" aria-controls="donhuy" aria-selected="false">Đang giao hủy</button>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active p-2" id="moi" role="tabpanel" aria-labelledby="moi-tab">
            mới
        </div>
        <div class="tab-pane fade show p-2" id="thanhtoan" role="tabpanel" aria-labelledby="thanhtoan-tab">
            thanh toán
        </div>
        <div class="tab-pane fade show p-2" id="xacnhan" role="tabpanel" aria-labelledby="xacnhan-tab">
            xác nhận
        </div>
        <div class="tab-pane fade show p-2" id="donggoi" role="tabpanel" aria-labelledby="donggoi-tab">
            đóng gói
        </div>
        <div class="tab-pane fade show p-2" id="danggiao" role="tabpanel" aria-labelledby="danggiao-tab">
            đang giao
        </div>
        <div class="tab-pane fade show p-2" id="hoanthanh" role="tabpanel" aria-labelledby="hoanthanh-tab">
            hoàn thành
        </div>
        <div class="tab-pane fade show p-2" id="donhuy" role="tabpanel" aria-labelledby="donhuy-tab">
            hủy
        </div>
    </div>
</div>
