
@{
    ViewBag.Title = "TestPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form action="/Payment/Payment" method="post">

    <div class="form-group mt-2">
        <label for="orderId">Mã đơn hàng:</label>
        <input type="text" name="orderId" class="form-control" value="1" required />
    </div>

    <div class="form-group">
        <label for="amount">Số tiền:</label>
        <input type="number" name="amount" class="form-control" value="3000" required />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Thanh toán</button>
</form>
